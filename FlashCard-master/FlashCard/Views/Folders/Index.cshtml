<!-- Page Header  -->
<div class="panel-header bg-white">
    <div class="page-inner py-5">
        <div class="row item-info-header">
            <!-- Folder Info -->
            <div class="col-8">
                <h5><b>2 học phần</b>
                    <b class="text-muted op-3">&emsp;|&emsp;Tạo bởi</b> 
                    <a href="" class="text-success">tuanvu</a>
                </h5>
                
                <div class="item-info-header-title">
                    <i class="far fa-folder"></i>
                    <b>Tiếng anh viết và đọc</b>
                </div>

                <h5>Mô tả thư mục ...</h5>
            </div>

            <!-- Right Menu -->
            <div class="col-3 ml-auto mr-3">
                <!-- Add Button -->
                <button type="button" class="btn btn-icon btn-round btn-secondary" rel="tooltip" data-toggle="modal" data-placement="top" 
                    title="Thêm học phần" data-target="#addSetToFolderModal">
                    <i class="fas fa-plus"></i>
                </button>&ensp;

                <!-- Edit Button -->
                <button type="button" class="btn btn-icon btn-round btn-secondary" rel="tooltip" data-toggle="modal" data-placement="top" 
                    title="Học" data-target="#learnFolderModal">
                    <i class="fas fa-book-reader"></i>
                </button>&ensp;

                <!-- Share Button -->
                <button type="button" class="btn btn-icon btn-round btn-secondary" rel="tooltip" data-toggle="modal" data-placement="top" 
                    title="Chia sẻ" data-target="#shareSetModal">
                    <i class="fas fa-share-alt"></i>
                </button>&ensp;

                <!-- More Button -->
                <span class="dropdown">
                    <button type="button" class="btn btn-icon btn-round btn-secondary" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-ellipsis-h"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" data-toggle="modal" data-target="#createFolderModal">
                            <i class="fas fa-pen"></i>&ensp;
                            Sửa
                        </a>
                        <a class="dropdown-item text-danger" data-toggle="modal" data-target="#removeClassModal">
                            <i class="fas fa-trash"></i>&ensp;
                            Xóa
                        </a>
                    </div>
                </span>

                <!-- Action toggle switch -->
                <div class="float-left  mt-3">
                    <h3><b>Bật thao tác</b></h3>
                    <label class="btn-switch">
                        <input type="checkbox" onclick="showActionBtn(2)">
                        <span></span>
                    </label>
                </div>
                
            </div>

        </div>
    </div>
</div>

<!-- Page Content  -->
<div class="page-inner">
    <div class="page-category">
        <div class="col-md-12">
            <!-- Set 1 -->
            <div class="card cardHoverLine card-stats card-round">
                <div class="card-body">
                    <div id="btn-action1" class="btn-action">
                        <button type="button" class="float-right btn btn-icon btn-round btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button type="button" class="float-right btn btn-icon btn-round btn-info">
                            <i class="fas fa-pen"></i>
                        </button>
                    </div>
                    <div class="card-category">16 thuật ngữ</div>
                    <a href="#" class="card-title text-uppercase" style="text-decoration: none;">
                        <b>Tiếng anh tập viết</b>
                    </a>
                    &emsp;
                    <i class="card-category far fa-image"></i>
                    <i class="card-category fas fa-lock"></i>
                </div>
            </div>

            <!-- Set 2 -->
            <div class="card cardHoverLine card-stats card-round">
                <div class="card-body">
                    <div id="btn-action2" class="btn-action">
                        <button type="button" class="float-right btn btn-icon btn-round btn-danger">
                            <i class="fas fa-trash"></i>
                        </button>
                        <button type="button" class="float-right btn btn-icon btn-round btn-info">
                            <i class="fas fa-pen"></i>
                        </button>
                    </div>
                    <div class="card-category">19 thuật ngữ</div>
                    <a href="#" class="card-title text-uppercase" style="text-decoration: none;">
                        <b>Tiếng anh tập đọc</b>
                    </a>
                    &emsp;
                    <i class="card-category far fa-image"></i>
                    <i class="card-category fas fa-lock"></i>
                </div>
            </div>

        </div>
    </div>
</div>

